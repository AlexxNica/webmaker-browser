{
  "rules": {
    "indent": [1, 2],
    "no-empty": [2],
    "no-console": [0],
    "comma-dangle": [1],
    "no-unused-vars": [0],
    "linebreak-style": [2, "unix"],
    "semi": [2, "always"]
  },
  "env": {
    "commonjs": true,
    "es6": true,
    "browser": true
  },
  "extends": "eslint:recommended",
  "ecmaFeatures": {
    "es6": true,
    "jsx": true,
    "experimentalObjectRestSpread": true
  },
  "plugins": [
    "react"
  ]
}
