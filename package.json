{
  "name": "webmaker-desktop",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && npm run webserver",
    "build": "npm-run-all build:**",
    "build:clean": "rimraf ./build && mkdirp ./build",
    "build:static": "ncp ./static ./build",
    "build:css": "lessc ./client/main.less ./build/css/main.bundle.css",
    "build:js": "webpack",
    "test": "npm-run-all test:**",
    "test:jshint": "jshint -c node_modules/mofo-style/linters/.jshintrc server static/js server.js",
    "test:jscs": "jscs -c node_modules/mofo-style/linters/.jscsrc server static/js server.js",
    "test:unit": "mocha -R spec ./test/unit/*.js",
    "webserver": "live-server ./build --port=8000 --quiet"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mozilla/webmaker-desktop"
  },
  "license": "MPL",
  "bugs": {
    "url": "https://github.com/mozilla/webmaker-desktop/issues"
  },
  "dependencies": {
    "classnames": "2.1.2",
    "color": "0.8.0",
    "react-router": "0.13.3",
    "xhr": "2.0.1"
  },
  "devDependencies": {
    "babel-core": "~5.4.7",
    "babel-loader": "~5.1.3",
    "expect.js": "~0.3.1",
    "jscs": "~1.13.1",
    "jshint": "~2.7.0",
    "json-loader": "~0.5.2",
    "jsx-loader": "~0.13.2",
    "less": "~2.5.1",
    "live-server": "~0.7.1",
    "mkdirp": "~0.5.1",
    "mocha": "~2.2.4",
    "mofo-style": "~1.0.1",
    "ncp": "~2.0.0",
    "npm-run-all": "~1.2.4",
    "rimraf": "~2.3.4",
    "webpack": "~1.9.10"
  },
  "engines": {
    "node": "0.12.2"
  }
}
